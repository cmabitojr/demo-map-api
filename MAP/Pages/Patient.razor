@layout UserLayout
@page "/Patient"
@inject NavigationManager NavigationManager

<PageTitle>Patient</PageTitle>

<style>
    body {
        background-color: #37474F;
    }
</style>


<MudContainer Class="d-flex align-center justify-center mud-width-full"  style="height:70vh;">
<MudCard Outlined="true" Square="false" Elevation="100" Style="width: 400px; height: 400px" Class="mt-5">
    
       
       <MudCardContent>
           <center>
          @* <MudImage Src="Images/pcso.png" Width="150" Height="150" Elevation="25" Class="rounded-lg ma-20"/>*@
           <br /><br />
        <MudText Typo="Typo.h5">Medical Assistance Program</MudText></center>
      <br/><br />
      <MudStack>
      <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.AppRegistration" Style="@($"color:{Colors.LightGreen.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large"@onclick="Registration">Registration</MudButton>
      <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Article" Style="@($"color:{Colors.LightGreen.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large">Application</MudButton>
      <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Announcement" Style="@($"color:{Colors.LightGreen.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large">Status</MudButton>
      <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.KeyboardReturn" Style="@($"color:{Colors.LightGreen.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large"@onclick="ReturntoHomePage">Return to Homepage</MudButton>
    </MudStack> 
 </MudCardContent>
             
            </MudCard>   
</MudContainer>

@code{
    private void ReturntoHomePage()
    {
        NavigationManager.NavigateTo("/");
    }
    private void Registration()
    {
        NavigationManager.NavigateTo("/Registration");
    }
    
    
     }
